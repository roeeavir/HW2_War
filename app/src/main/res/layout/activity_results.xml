<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1"
            android:background="#2B712E"
            >

            <TextView
                android:id="@+id/results_LBL_winner"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:gravity="center"
                android:layout_margin="10dp"
                android:layout_weight="2"
                android:textSize="30sp" />

            <Button
                android:id="@+id/results_BTN_exit"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_margin="20dp"
                android:layout_weight="1"
                android:text="To Main Menu" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1"
            android:background="#DC143C"
            >

            <TextView
                android:id="@+id/results_LBL_name"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:gravity="center"
                android:layout_margin="10dp"
                android:layout_weight="2"
                android:text="Enter Winner's name:"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/results_EDT_winnerName"
                android:layout_width="match_parent"
                android:padding="10dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textSize="20sp"
                android:gravity="center"
                />

            <Button
                android:id="@+id/results_BTN_addPlayerRecord"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_margin="20dp"
                android:layout_weight="1"
                android:text="Add Player Record" />


        </LinearLayout>

    </LinearLayout>




</RelativeLayout>